{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        // We'll later set API URL here if you like,
        // for now leave it simple
        "NODE_ENV": "development"
      }
    }
  ]
}
